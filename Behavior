# Decade CAGRs
cagrs = {
    "1970s": 0.04,
    "1980s": 0.121,
    "1990s": 0.106,
    "2000s": 0.078,
    "2010s": 0.139
}

# Calculate growth factors over 5 years
factors = {decade: (1 + rate) ** 5 for decade, rate in cagrs.items()}

# Build the table
rows = []
for comp in companies:
    row = {"Company": comp["name"]}
    for decade, factor in factors.items():
        row[f"{decade} Price"] = round(comp["price"] * factor, 2)
        row[f"{decade} MCap (T$)"] = round(comp["market_cap"] * factor, 2)
    rows.append(row)

df = pd.DataFrame(rows)

import caas_jupyter_tools
caas_jupyter_tools.display_dataframe_to_user(name="Predicted 2030 Prices and Market Caps", dataframe=df)

